<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<meta name="description" content="" />
	<meta name="author" content="" />

	<link rel="icon" type="image/png" href="~/images/favicon.png">

	<meta http-equiv="cache-control" content="max-age=0" />
	<meta http-equiv="cache-control" content="no-cache" />
	<meta http-equiv="expires" content="0" />
	<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
	<meta http-equiv="pragma" content="no-cache" />

	<title>@ViewData["Title"]</title>
	<base href="~/" />

	<environment names="Development, Staging">
		<link rel="stylesheet" href="~/vendor/vendor.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/vendor/theme.css" asp-append-version="true" />

		<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	</environment>
	<environment names="Production">
		<link rel="stylesheet" href="~/vendor/vendor.min.css" asp-append-version="true" />
		<link rel="stylesheet" href="~/vendor/theme.min.css" asp-append-version="true" />

		<link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
	</environment>
</head>
<body class="app header-fixed sidebar-fixed aside-menu-fixed aside-menu-hidden">

	@RenderBody()

	<environment names="Development, Staging">
		<script src="~/vendor/vendor.js" asp-append-version="true"></script>

		<script src="~/js/site.js" asp-append-version="true"></script>
	</environment>
	<environment names="Production">
		<script src="~/vendor/vendor.min.js" asp-append-version="true"></script>

		<script src="~/js/site.min.js" asp-append-version="true"></script>
	</environment>

	@RenderSection("scripts", required: false)
</body>
</html>
